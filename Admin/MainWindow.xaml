<Window x:Class="Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="400" Width="1010" Icon="palmTree.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="380,120,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="440,120,0,0" VerticalAlignment="Top" Width="120" x:Name="TextBoxLogin"/>
        <Label Content="Hasło:" HorizontalAlignment="Left" Margin="380,160,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="440,160,0,0" VerticalAlignment="Top" Width="120" x:Name="PasswordBoxHaslo"/>
        <Button Content="Zaloguj" HorizontalAlignment="Left" Margin="460,210,0,0" VerticalAlignment="Top" Width="80" Click="ButtonZaloguj"/>
    </Grid>
</Window>